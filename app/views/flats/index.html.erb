<header class="d-flex align-items-end">
  <div class='d-inline-flex p-2'>
        <h4>Simple AirBnB</h4>
  </div>
  <div class='ml-auto d-inline-flex p-2' >
      <input type="text" value="search for" class='text-align-right'>
      <button type="submit" class='btn btn-outline-primary p-1'>Search</button>
  </div>
  <div class='d-inline-flex p-2' >
        <%= link_to new_flat_path do %>
        <button type="button" class='btn btn-outline-primary p-1'>add flat</button>
        <% end %>
  </div>
</header>
