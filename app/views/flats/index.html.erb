  <div class="row">
    <div class="col">
      <h1>All our Flats (<%=@flats.size %>)</h1>
        <div class='d-flex'>
        <% @flats.each do |flat| %>
          <div class="card">
            <div>
              <h4><%= link_to flat.name, flat_path(flat)%><h4>
              <p><i class="fas fa-users"> <%= flat.number_of_guests%></i></p>
              <p><i class="fas fa-euro-sign"> <%= flat.price_per_night%></i></p>
            </div>
            <div>
              <%= link_to%>
            </div>
          </div>
        <% end %>
        </ul>
    </div>
  </div>
</div>
